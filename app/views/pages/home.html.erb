<div class='box'>
  <div class='box-header'>
    <h1 class='box-header-text'>Today</h2>
  </div>

  <div class='box-body'>
    <ul class='box-list'>
      <% @episodes.each do |episode| %>
        <li class='episode-container'>
          <h2 class='episode-header'>
            <%= episode.title %>
          </h2>

          <p><%= episode.overview %></p>

          <div class='episode-footer'>
            <span class='muted'>Episode</span> <%= episode.number %>
            <span class='muted'>from season</span> <%= episode.season %>
            <span class='muted'>airs at</span> <%= pretty_aired_at(episode) %>
            <%= episode_done_badge(episode) %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>